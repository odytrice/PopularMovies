<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.odytrice.popularmovies.fragments.DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/img_backdrop"
            android:layout_height="@dimen/backdrop_height"
            android:contentDescription="Backdrop" />

        <TextView
            android:id="@+id/txt_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/hero_padding"
            android:paddingTop="@dimen/hero_padding"
            android:textSize="@dimen/hero_text"
            tools:text="Movie Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/img_movie_poster"
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                tools:src="@mipmap/loader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_movie_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/textview_padding"
                    tools:text="2015" />

                <TextView
                    android:id="@+id/txt_movie_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/textview_padding"
                    tools:text="Average Votes 4.7" />
                <TextView
                    android:id="@+id/txt_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/textview_padding"
                    tools:text="Average Votes 4.7" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_movie_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/textview_summary_padding"
            tools:text="Summary" />
    </LinearLayout>
</ScrollView>